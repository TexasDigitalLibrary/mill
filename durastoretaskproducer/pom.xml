          </exclusion>
          <exclusion>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging-api</artifactId>
          </exclusion>
          </exclusions>
      </dependency>

      <dependency>
         <groupId>org.powermock</groupId>
